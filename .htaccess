# -------------------------------------------------------
# Enforce HTTPS
# -------------------------------------------------------
RewriteEngine On
RewriteCond %{HTTPS} !=on
RewriteRule ^ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

# -------------------------------------------------------
# Disable directory browsing
# -------------------------------------------------------
Options -Indexes

# -------------------------------------------------------
# Deny access to hidden or sensitive files
# -------------------------------------------------------
<FilesMatch "(^\.|composer\.(json|lock)|package\.json|package-lock\.json|yarn\.lock)">
    Require all denied
</FilesMatch>

<FilesMatch "\.(env|ini|config|key)$">
    Require all denied
</FilesMatch>

# -------------------------------------------------------
# PHP error handling for production
# -------------------------------------------------------
php_flag display_errors Off
php_flag log_errors On
php_value error_log /private_logs/php_errors.log

# -------------------------------------------------------
# Security headers
# (These are safe defaults that won't break a simple site)
# -------------------------------------------------------
Header always set X-Frame-Options "SAMEORIGIN"
Header always set X-Content-Type-Options "nosniff"
Header always set Referrer-Policy "strict-origin-when-cross-origin"
Header always set X-XSS-Protection "1; mode=block"

# Basic CSP (relaxed enough for simple sites)
Header always set Content-Security-Policy "default-src 'self'; img-src 'self' data:; style-src 'self' 'unsafe-inline';"

# -------------------------------------------------------
# Cache control (optional)
# -------------------------------------------------------
<FilesMatch "\.(jpg|jpeg|png|gif|svg|css|js)$">
    Header set Cache-Control "max-age=31536000, public"
</FilesMatch>

